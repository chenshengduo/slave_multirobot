<launch>

  <!-- Pass in mocap_config_file:=/path/to/config.yaml to change options. -->
  <arg name="mocap_config_file"
       default="$(find mocap_optitrack)/config/mocap.yaml" />

  <node pkg="mocap_optitrack"
        type="mocap_node"
        name="mocap_node"
        respawn="false"
        launch-prefix=""
        required="true">
    <rosparam file="$(arg mocap_config_file)" command="load" />
  </node>

<node 
      pkg="beginner_tutorials" 
      name="serial"
      type="serial"
      launch-prefix="xterm -e">
       </node>

       

<node pkg="beginner_tutorials" name="talker" type="talker"  launch-prefix="xterm -e">
    </node>

</launch>
