<!--
  The mobile platform base.
  
  Selector for the base.
 -->
<launch>
  <!-- mobile base nodelet manager -->
  <node pkg="nodelet" type="nodelet" name="mobile_base_nodelet_manager" args="manager" ns="$(arg ns)">
  </node>
  
  <!-- mobile base -->
  <arg name="base"/>
  <arg name="serialport"/>
  <arg name="ns"/>
  <include file="$(find slave_bringup)/launch/includes/$(arg base)/mobile_base.launch.xml">
    <arg name="serialport" value="$(arg serialport)"/>
    <arg name="manager" value="mobile_base_nodelet_manager"/>
    <arg name="ns" value="$(arg ns)"/>
  </include>
  
  <!-- velocity commands multiplexer -->
  <node pkg="nodelet" type="nodelet" name="cmd_vel_mux" args="load yocs_cmd_vel_mux/CmdVelMuxNodelet mobile_base_nodelet_manager" ns="$(arg ns)">
    <param name="yaml_cfg_file" value="$(find turtlebot_bringup)/param/mux.yaml"/>
    
    <remap from="cmd_vel_mux/output" to="mobile_base/commands/velocity"/>
  </node>
</launch>
