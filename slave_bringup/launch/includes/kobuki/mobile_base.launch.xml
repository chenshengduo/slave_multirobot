<!--
  Kobuki's implementation of turtlebot's mobile base.
 -->
<launch>
  <arg name="serialport"/> <!-- TODO: use the serialport parameter to set the serial port of kobuki -->
  <arg name="manager"/>
  <arg name="ns"/>
  
  <node pkg="nodelet" type="nodelet" name="mobile_base" args="load kobuki_node/KobukiNodelet $(arg manager)" ns="$(arg ns)">
    <rosparam file="$(find kobuki_node)/param/base.yaml" command="load"/>
    <param name="device_port" value="$(arg serialport)" />
    <param name="odom_frame" type="string" value="$(arg ns)/odom" />
    <param name="base_frame" type="string" value="$(arg ns)/base_footprint" />
    <!--param name="tf_prefix" value="$(arg ns)" /-->
    <remap from="mobile_base/odom" to="odom"/>
    <!-- Don't do this - force applications to use a velocity mux for redirection  
      <remap from="mobile_base/commands/velocity" to="cmd_vel"/> 
    -->
    <remap from="mobile_base/enable" to="enable"/>
    <remap from="mobile_base/disable" to="disable"/>
    <remap from="mobile_base/joint_states" to="joint_states"/>
  </node>
  
  <!-- bumper/cliff to pointcloud -->
  <include file="$(find slave_bringup)/launch/includes/kobuki/bumper2pc.launch.xml">
    <arg name="ns" value="$(arg ns)"/>
  </include>
</launch>
